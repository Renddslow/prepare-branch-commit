{
  "name": "prepare-branch-commit",
  "version": "1.1.0",
  "private": false,
  "description": "Add text to commits based on Jira ticket numbers in the branch name.",
  "repository": "https://github.com/Renddslow/prepare-branch-commit",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "index.js",
  "scripts": {
    "test": "node ./node_modules/jest/bin/jest.js",
    "build": "tsc ./src/index.ts && mkdir -p ./bin && sed '1s;^;#!/usr/bin/env node\\n;' ./src/index.js > ./bin/index.js; rm ./src/index.js",
    "build:all": "yarn build && yarn build:gha",
    "build:gha": "ncc build ./src/gha.ts --license licenses.txt",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@vercel/ncc": "^0.33.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "bin": {
    "prepare-branch-commit": "bin/index.js"
  },
  "jest": {
    "testRegex": "(/__tests__/(?!.*(?:testdata|testutil)).*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
